<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="iee3.he_arc.cityresto.ActSubscribe">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bg_act_subscribe"
        android:src="@drawable/bg_act_subscribe"
        android:scaleType="fitXY"
        android:alpha=".2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvActSubscribeTitle"
        android:id="@+id/tvActSubscribeTitle"
        android:textStyle="bold"
        android:textColor="#0C64A8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUserName"
        android:ems="10"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignRight="@+id/btnOKSubscribe"
        android:layout_alignEnd="@+id/btnOKSubscribe" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tvPasswordSubscr"
        android:layout_alignStart="@+id/tvPasswordSubscr" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etConfirmPassword"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/tvConfirmPasswordSubscr"
        android:layout_alignLeft="@+id/tvConfirmPasswordSubscr"
        android:layout_alignStart="@+id/tvConfirmPasswordSubscr" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnOKSubsrcibe"
        android:id="@+id/btnOKSubscribe"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvEditBoxUserNameSubsrc"
        android:id="@+id/tvUserNameSubscr"
        android:textStyle="bold"
        android:textColor="#09174F"
        android:layout_above="@+id/etUserName"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_alignStart="@+id/etUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvEditBoxPasswordSubsrc"
        android:id="@+id/tvPasswordSubscr"
        android:textStyle="bold"
        android:textColor="#09174F"
        android:layout_above="@+id/etPassword"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_alignStart="@+id/etUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/TvEditBoxConfirmPasswordSubsrc"
        android:id="@+id/tvConfirmPasswordSubscr"
        android:textStyle="bold"
        android:textColor="#09174F"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginTop="29dp" />


</RelativeLayout>
