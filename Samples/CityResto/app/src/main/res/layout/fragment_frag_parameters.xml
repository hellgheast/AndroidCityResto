<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iee3.he_arc.cityresto.FragParameters">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnAcceptParam"
        android:id="@+id/btnAcceptParam"
        android:textSize="20dp"
        android:fontFamily="Arial"
        android:textColor="#FFFFFF"
        android:background="@drawable/littlebuttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnCancelParam"
        android:id="@+id/btnCancelParam"
        android:textSize="20dp"
        android:fontFamily="Arial"
        android:textColor="#FFFFFF"
        android:background="@drawable/littlebuttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="90dp" />

    <ScrollView
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:minWidth="810dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="810dp"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/TvSetRadius"
                android:id="@+id/tvSetRadius"
                android:textSize="21dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etSetRadius"
                android:inputType="numberDecimal"
                android:ems="4"
                android:layout_alignBaseline="@+id/tvSetRadius"
                android:layout_alignBottom="@+id/tvSetRadius"
                android:layout_toRightOf="@+id/cbType3"
                android:layout_toEndOf="@+id/cbType3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type1"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:id="@+id/cbType1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/tvSetRadius"
                android:layout_alignLeft="@+id/tvSetRadius"
                android:layout_alignStart="@+id/tvSetRadius" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type2"
                android:id="@+id/cbType2"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType1"
                android:layout_alignLeft="@+id/cbType1"
                android:layout_alignStart="@+id/cbType1" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type3"
                android:id="@+id/cbType3"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType2"
                android:layout_alignLeft="@+id/cbType2"
                android:layout_alignStart="@+id/cbType2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type4"
                android:id="@+id/cbType4"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType3"
                android:layout_alignLeft="@+id/cbType3"
                android:layout_alignStart="@+id/cbType3" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type5"
                android:id="@+id/cbType5"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType4"
                android:layout_alignLeft="@+id/cbType4"
                android:layout_alignStart="@+id/cbType4" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type6"
                android:id="@+id/cbType6"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType5"
                android:layout_alignLeft="@+id/cbType5"
                android:layout_alignStart="@+id/cbType5" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type7"
                android:id="@+id/cbType7"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType6"
                android:layout_alignLeft="@+id/cbType6"
                android:layout_alignStart="@+id/cbType6" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type8"
                android:id="@+id/cbType8"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType7"
                android:layout_alignLeft="@+id/cbType7"
                android:layout_alignStart="@+id/cbType7" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type9"
                android:id="@+id/cbType9"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType8"
                android:layout_alignLeft="@+id/cbType8"
                android:layout_alignStart="@+id/cbType8"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type10"
                android:id="@+id/cbType10"
                android:textSize="20dp"
                android:fontFamily="Arial"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_below="@+id/cbType9"
                android:layout_alignLeft="@+id/cbType9"
                android:layout_alignStart="@+id/cbType9"/>

        </RelativeLayout>


    </ScrollView>

</FrameLayout>
